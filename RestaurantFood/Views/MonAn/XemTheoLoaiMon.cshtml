@model List<RestaurantFood.Models.MonAn>

@{
    ViewBag.Title = "XemTheoLoaiMon";
    Layout = "~/Views/Shared/_LayoutMonAn.cshtml";
}

<div class="section-title product__discount__title">
    <h2>@ViewBag.tenLoai</h2>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="../Images/@item.AnhChinh_MonAn">
                    <ul class="product__item__pic__hover">
                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="#">@item.Ten_MonAn</a></h6>
                    <h5>@string.Format("{0:#,0}", item.GiaBanMoi_MonAn) vnđ</h5>
                </div>
            </div>
        </div>
    }
</div>


