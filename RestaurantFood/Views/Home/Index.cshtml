@model List<RestaurantFood.Models.MonAn>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Tất cả sản phẩm</h2>
            </div>
            <div class="featured__controls">
                <ul>
                    <li class="active" data-filter="*">All</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row featured__filter">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="../Images/@item.AnhChinh_MonAn">
                        <ul class="featured__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="~/MonAn/ChiTietSanPham?id=@item.Id_MonAn"><i class="fa fa-info"></i></a></li>
                            <li><a href="@Url.Action("ThemGioHang", "GioHang", new {id_MonAn = item.Id_MonAn, url = Request.Url.ToString() })"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="~/MonAn/ChiTietSanPham?id=@item.Id_MonAn">@item.Ten_MonAn</a></h6>
                        <h5>@string.Format("{0:#,0}", item.GiaBanMoi_MonAn) vnđ</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

